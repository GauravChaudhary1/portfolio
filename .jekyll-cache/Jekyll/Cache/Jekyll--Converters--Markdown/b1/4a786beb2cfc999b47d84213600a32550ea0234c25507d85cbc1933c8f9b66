                        <span class="k">column</span> <span class="k">TYPE</span> <span class="n">salv_de_column</span><span class="p">.</span>
  <span class="k">IF</span> <span class="k">column</span> <span class="k">EQ</span> <span class="s1">'VBELN'</span><span class="p">.</span>
    <span class="k">CLEAR</span> <span class="p">:</span> <span class="n">ls_vbak</span><span class="p">.</span>
    <span class="k">DATA</span><span class="p">:</span> <span class="n">lr_table</span> <span class="k">TYPE</span> <span class="k">REF</span> <span class="k">TO</span> <span class="n">cl_salv_table</span><span class="p">.</span>
    <span class="k">READ</span> <span class="k">TABLE</span> <span class="n">lt_vbak</span> <span class="k">INTO</span> <span class="n">ls_vbak</span> <span class="k">INDEX</span> <span class="n">row</span><span class="p">.</span>
    <span class="k">IF</span> <span class="n">sy</span><span class="o">-</span><span class="n">subrc</span> <span class="k">EQ</span> <span class="mi">0</span><span class="p">.</span>
<span class="cm">*      SET PARAMETER ID 'AUN' FIELD ls_vbak-vbeln.</span>
<span class="cm">*      CALL TRANSACTION 'VA03' AND SKIP FIRST SCREEN.</span>
      <span class="k">SELECT</span> <span class="o">*</span>
        <span class="k">FROM</span> <span class="n">vbap</span>
        <span class="k">INTO</span> <span class="k">TABLE</span> <span class="n">lt_vbap</span>
        <span class="k">WHERE</span> <span class="n">vbeln</span> <span class="o">=</span> <span class="n">ls_vbak</span><span class="o">-</span><span class="n">vbeln</span><span class="p">.</span>
